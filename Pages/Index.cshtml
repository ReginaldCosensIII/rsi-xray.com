@page "/"
@model IndexModel
@{
    // --- Per-page SEO consumed by _SeoHead ---
    ViewData["SiteName"] = "Radiometric Services & Instruments, LLC";
    ViewData["Title"] = "RSI | High-Performance Thickness & Coating Gauges";
    ViewData["MetaDescription"] = "RSI designs and manufactures high-quality thickness and coating weight gauges for the metals industry. We specialize in legacy system upgrades, service, and support.";
    ViewData["Canonical"] = "https://www.rsi-xray.com/";

    // Open Graph / Twitter
    ViewData["OgTitle"] = "RSI | High-Performance Thickness & Coating Gauges";
    ViewData["OgDescription"] = "RSI specializes in legacy system upgrades, service, and support for the metals industry.";
    ViewData["OgImage"] = "https://www.rsi-xray.com/images/social-cards/home.jpg";
    ViewData["OgType"] = "website";

    // Twitter
    ViewData["TwitterCard"] = "summary_large_image";
    ViewData["TwitterTitle"] = "RSI | High-Performance Thickness & Coating Gauges";
    ViewData["TwitterDescription"] = "RSI specializes in legacy system upgrades, service, and support for the metals industry.";
    ViewData["TwitterImage"] = "https://www.rsi-xray.com/images/social-media/home.jpg";
}

@section HeadContent {
    @* --- PRELOAD LCP IMAGE FOR HOMEPAGE --- *@
    <link rel="preload" as="image" href="/images/homepage/hero-background-mobile.webp" media="(max-width: 600px)" fetchpriority="high">
    <link rel="preload" as="image" href="/images/homepage/hero-background-1536x1152.webp" fetchpriority="high">

    <link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true" />

    <!-- Style block for responsive hero image -->
    <style>
        .hero-section {
            /* Fallback for older browsers */
            background-image: url('/images/homepage/hero-background-1536x1152.jpg');
            /* Modern format for modern browsers */
            background-image: url('/images/homepage/hero-background-1536x1152.webp');
        }

        /* On mobile screens, use a smaller, optimized image */
        @@media (max-width: 600px) {
            .hero-section {
                background-image: url('/images/homepage/hero-background-mobile.webp');
            }
        }
    </style>

    <!-- Structured Data: Organization -->
    <script type="application/ld+json">
    @Html.Raw(@"{
      ""@context"": ""https://schema.org"",
      ""@type"": ""Organization"",
      ""name"": ""Radiometric Services & Instruments, LLC"",
      ""alternateName"": ""RSI"",
      ""url"": ""https://www.rsi-xray.com/"",
      ""logo"": ""https://www.rsi-xray.com/images/cropped-logo.png"",
      ""contactPoint"": {
        ""@type"": ""ContactPoint"",
        ""telephone"": ""+1-301-874-3494"",
        ""contactType"": ""customer service""
      },
      ""address"": {
        ""@type"": ""PostalAddress"",
        ""streetAddress"": ""4507 Metropolitan Ct, Unit J"",
        ""addressLocality"": ""Frederick"",
        ""addressRegion"": ""MD"",
        ""postalCode"": ""21704"",
        ""addressCountry"": ""US""
      },
      ""description"": ""RSI is a full-service supplier of high-quality gauging systems, electronics upgrade packages, and expert support for the metals industry, specializing in DMC and Radiometrie systems.""
    }")
    </script>

    <!-- Structured Data: WebSite + SearchAction -->
    <script type="application/ld+json">
    @Html.Raw(@"{
      ""@context"": ""https://schema.org"",
      ""@type"": ""WebSite"",
      ""url"": ""https://www.rsi-xray.com/"",
      ""potentialAction"": {
        ""@type"": ""SearchAction"",
        ""target"": ""https://www.rsi-xray.com/search?q={search_term_string}"",
        ""query-input"": ""required name=search_term_string""
      }
    }")
    </script>
}


<!-- ======= Homepage sections (body only; no <html>/<head>/<body>) ======= -->

<section class="hero-section">
    <div class="container">
        <h1>Manufacture high quality thickness and coating weight gauges for the Metals Industry</h1>
        <h2>Spare Parts, Service, and Upgrades for Thickness and Coating Gauges</h2>
        <div class="hero-buttons">
            <a asp-page="/ContactUs"
               asp-route-subject="Free Consultation Request"
               class="btn btn-primary"
               aria-label="Book a 15 Minute Call">
                Book a 15 Minute Call
            </a>

            <a asp-page="/ContactUs"
               asp-route-subject="On-site Evaluation"
               class="btn btn-primary"
               aria-label="Request a Free On-Site Evaluation">
                Request a Free On-Site Evaluation
            </a>
        </div>
    </div>
</section>

<section class="section section-alt-bg choose-rsi-section">
    <div class="container">
        <h2>Design and Supply of Electronics upgrade packages for Coating and Thickness gauges from DMC, Radiometrie, ThermoFisher, Loral/Weston, I2S, IRM/NDC and AccuRay to name a few since 1984.</h2>
        <p class="section-intro-text">
            RSI is committed to creating and maintaining strong relationships with you, our customer, built on a foundation of excellence and trust.
            From the products we manufacture to our dedicated customer service and support, we know what's important to you.
        </p>

        <div class="features-grid">
            <div class="card card--icon">
                <div class="card-icon">
                    <i class="fa-solid fa-wrench" aria-hidden="true"></i>
                </div>
                <h3>Full Service Supplier</h3>
                <p>Founded in 2003 RSI offers a full supply of thickness and coating gauges, upgrade solutions, spare parts, service support and in house repairs.</p>
            </div>

            <div class="card card--icon">
                <div class="card-icon">
                    <i class="fa-solid fa-award" aria-hidden="true"></i>
                </div>
                <h3>200+ Years of Combined Experience</h3>
                <p>With the expertise & knowledge to offer new thickness and coating gauges and to extend the lifetime of existing systems. RSI knows gauges better than any other gauge supplier in North America.</p>
            </div>

            <div class="card card--icon">
                <div class="card-icon">
                    <i class="fa-solid fa-recycle" aria-hidden="true"></i>
                </div>
                <h3>Specialize in Legacy Support</h3>
                <p>RSI offers upgrade solutions for many legacy x-ray, isotope, and coating gauges including: DMC, Radiometrie, 12S, Loral, Weston, and more.</p>
            </div>
        </div>

        <div class="section-cta">
            <a asp-page="/ContactUs"
               asp-route-subject="Equipment Evaluation"
               class="btn btn-primary"
               aria-label="Contact us for equipment evaluation">
                Contact Us for Equipment Evaluation
            </a>
        </div>
    </div>
</section>

<section class="section services-section">
    <div class="container">
        <h2>RSI Solutions & Services</h2>
        <p class="section-intro-text">
            Our mission is to listen to your specific needs and design reliable products using the highest quality components and workmanship which are supplied fully tested for fast, efficient installation and startup.
        </p>

        <div class="services-grid">
            <div class="card">
                <picture>
                    <source media="(max-width: 600px)" srcset="~/images/homepage/repairs-services-card-400x400-mobile.webp" type="image/webp">
                    <source media="(max-width: 600px)" srcset="~/images/homepage/repairs-services-card-400x400-mobile.jpg" type="image/jpeg">
                    <source srcset="~/images/homepage/repairs-services-card-800x800.webp" type="image/webp">
                    <img src="~/images/homepage/repairs-services-card-800x800.jpg" alt="Upgrade package example" class="card-image-top" asp-append-version="true" loading="lazy" width="400" height="400" />
                </picture>
                <div class="card-content">
                    <h3>Upgrade Packages</h3>
                    <p>The RSI Upgrade Package provides a flexible solution to obsolescence issues of older gauging electronics. Upgrade packages re-use the existing radiation sources and measuring frames and can often re-use or upgrade existing detector units, reducing the cost of new spare parts inventories.</p>
                    <a href="/Products/UpgradePackage" class="learn-more btn btn-primary" aria-label="Learn About Upgrades">Learn About Upgrades</a>
                </div>
            </div>
            <div class="card">
                <picture>
                    <source media="(max-width: 600px)" srcset="~/images/homepage/upgrade-package-card-400x400-mobile.webp" type="image/webp">
                    <source media="(max-width: 600px)" srcset="~/images/homepage/upgrade-package-card-400x400-mobile.jpg" type="image/jpeg">
                    <source srcset="~/images/homepage/upgrade-package-card-800x800.webp" type="image/webp">
                    <img src="~/images/homepage/upgrade-package-card-800x800.jpg" alt="Repairs and services" class="card-image-top" asp-append-version="true" loading="lazy" width="400" height="400" />
                </picture>
                <div class="card-content">
                    <h3>Repairs and Parts Services</h3>
                    <p>There’s always the risk that even the best components will fail, impacting the productivity of your plant. A fast and reliable repair service is essential if costly downtime needs to be avoided. Our In-house Repair Services make repairs easy for you.</p>
                    <a href="/Spare-Parts" class="learn-more btn btn-primary" aria-label="Explore Parts & Repairs">Explore Parts & Repairs</a>
                </div>
            </div>

            <div class="card">
                <picture>
                    <source media="(max-width: 600px)" srcset="~/images/homepage/performance-monitoring-card-400x400-mobile.webp" type="image/webp">
                    <source media="(max-width: 600px)" srcset="~/images/homepage/performance-monitoring-card-400x400-mobile.jpg" type="image/jpeg">
                    <source srcset="~/images/homepage/performance-monitoring-card-800x800.webp" type="image/webp">
                    <img src="~/images/homepage/performance-monitoring-card-800x800.jpg" alt="Performance monitoring" class="card-image-top" asp-append-version="true" loading="lazy" width="400" height="400" />
                </picture>
                <div class="card-content">
                    <h3>Performance Monitoring</h3>
                    <p>Real-time software provides high performance accuracy while being versatile for the end-user. From temperature and coatings to changes in alloys, RSI can provide dynamic calculations and corrections for most situations.</p>
                    <a href="/Performance-Monitoring" class="learn-more btn btn-primary" aria-label="Discover Monitoring Solutions">Discover Monitoring Solutions</a>
                </div>
            </div>
        </div>
    </div>
</section>