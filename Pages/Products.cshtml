@page "/products"
@{
    ViewData["SiteName"] = "Radiometric Services & Instruments, LLC";
    ViewData["Title"] = "High-Performance Gauging Systems | RSI";
    ViewData["MetaDescription"] = "Explore RSI's range of high-performance online thickness gauges, coating weight gauges, and custom lab instruments for the metals industry.";
    ViewData["Canonical"] = "https://www.rsi-xray.com/products";

    ViewData["OgTitle"] = "High-Performance Gauging Systems | RSI";
    ViewData["OgDescription"] = "Explore RSI's range of high-performance online thickness gauges, coating weight gauges, and custom lab instruments for the metals industry.";
    ViewData["OgImage"] = "https://www.rsi-xray.com/images/social-cards/products.jpg";
    ViewData["OgType"] = "website";

    ViewData["TwitterCard"] = "summary_large_image";
