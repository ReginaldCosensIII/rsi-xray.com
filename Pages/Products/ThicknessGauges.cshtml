    ViewData["Title"] = "Online Thickness Gauges | RSI";
    ViewData["MetaDescription"] = "Technical details for RSI's high-performance online thickness gauges, including the GaugeMaster PLUS and the Model 50 X-Ray Gauge for various metal processing lines.";
    ViewData["Canonical"] = "https://www.rsi-xray.com/products/thickness-gauges";

    ViewData["OgTitle"] = "Online Thickness Gauges | RSI";
    ViewData["OgDescription"] = "Technical details for RSI's high-performance online thickness gauges, including the GaugeMaster PLUS and the Model 50 X-Ray Gauge.";
    ViewData["OgImage"] = "https://www.rsi-xray.com/images/social-cards/online-thickness-gauges.jpg";
