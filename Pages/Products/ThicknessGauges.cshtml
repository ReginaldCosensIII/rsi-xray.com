@section HeadContent {
    <link rel="stylesheet" href="~/css/products-shared.css" asp-append-version="true" />
    <script type="application/ld+json">
    @Html.Raw(@"{
      ""@context"": ""https://schema.org"",
      ""@type"": ""Product"",
      ""name"": ""RSI Online Thickness Gauges"",
      ""description"": ""RSI's line of online thickness gauges, including the GaugeMaster PLUS and Model 50, provide accurate, high-speed, non-contact measurement for demanding environments."",
      ""brand"": { ""@type"": ""Brand"", ""name"": ""RSI"" },
      ""additionalProperty"": [
        { ""@type"": ""PropertyValue"", ""name"": ""Measurement Speed"", ""value"": ""Up to 1,000 measurements per second"" },
        { ""@type"": ""PropertyValue"", ""name"": ""CPU Cycle Time"", ""value"": ""Up to 1 millisecond"" },
        { ""@type"": ""PropertyValue"", ""name"": ""Key Feature"", ""value"": ""DynaComp Alloy Correction"" },
